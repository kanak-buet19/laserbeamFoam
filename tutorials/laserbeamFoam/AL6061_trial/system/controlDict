FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     Flint_multiphaseEulerFoamD;

startFrom       latestTime;
startTime       0;

stopAt          endTime;
endTime         2500e-6;        // 1.0 × 10⁻³ s total simulation time

deltaT          1e-7;           // fixed time step size = 1 × 10⁻⁷ s

writeControl    runTime;
writeInterval   50e-6;     


purgeWrite      0;
writeFormat     ascii;
writePrecision  10;
writeCompression uncompressed;

timeFormat      general;
timePrecision   10;

runTimeModifiable no;

adjustTimeStep  yes;             // disable adaptive Δt

maxCo           0.35;           // (unused when adjustTimeStep=no, but set for reference)
maxAlphaCo      0.35;        // omit or leave commented if not needed
 maxDeltaT       3e-7;        // omit if not using adaptive Δt

// ************************************************************************* //

